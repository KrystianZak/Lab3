@model Lab3.Models.Data

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Wynik Formularza</title>
    <style>
        .center {
            text-align: center;
        }

        .bold {
            font-weight: bold;
        }
    </style>
</head>
<body class="center">
    <h1 class="bold">Wynik Formularza</h1>

    <p class="bold">Imię: </p>
    <p>@Model.name</p>

    <p class="bold">Nazwisko: </p>
    <p>@Model.surname</p>

    <p class="bold">Email: </p>
    <p>@Model.email</p>

    <p class="bold">Nr telefonu: </p>
    <p>@Model.phoneNumber</p>

    <p class="bold">Wiek: </p>
    <p>@Model.age</p>

    <p class="bold">Miasto: </p>
    <p>@Model.city</p>

    <p class="bold">Teamt: </p>
    <p>@Model.topic</p>

    <p class="bold">Treść: </p>
    <p>@Model.description</p>

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <p class="bold">@ViewBag.SuccessMessage</p>
    }
</body>
</html>
