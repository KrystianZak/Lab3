@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Formularz Kontaktowy</title>
</head>
<body>
    <h1>Formularz Kontaktowy</h1>

    <form action="/Data/Output" method="post">
        <label for="name">Imię:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="surname">Nazwisko:</label>
        <input type="text" id="surname" name="nazwisko" required><br><br>

        <label for="email">Twój email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="Haslo">Hasło:</label>
        <input type="password" id="password" name="password" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$"><br><br>

        <label for="confirmPassword">Potwierdź Hasło:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required><br><br>


        <label for="phoneNumber">Nr telefonu:</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" required pattern="[0-9]{9,15}"><br><br>

        <label for="age">Wiek:</label>
        <input type="number" id="age" name="age" min="11" max="80" required><br><br>

        <label for="city">Miasto:</label>
        <select id="city" name="city" required>
            <option value="">Wybierz</option>
            <option value="Gdynia">Gdynia</option>
            <option value="Kraków">Kraków</option>
            <option value="Wrocław">Wrocław</option>
            <option value="Sopot">Sopot</option>
            <option value="Inowrocław">Inowrocław</option>
        </select><br><br>

        <label for="topic">Temat:</label>
        <input type="text" id="topic" name="topic" required><br><br>

        <label for="description">Treść:</label><br>
        <textarea id="description" name="description" rows="8" cols="50" required></textarea><br><br>

        <input type="reset" value="Wyczyść"><br><br>
        <input type="submit" value="Wyślij">
    </form>


</body>
</html>
